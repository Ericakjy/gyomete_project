<div class="container">
  <form action="/form_m_update/<%=@one_form.id%>" method="POST" >
    <div class="form-group">
      <label for="exampleInputEmail1">수신 이메일</label>
      <input type="email" name="receiver" class="form-control" id="exampleInputEmail1" placeholder="Email">
    </div>
<!--#제목입력-->
    <div class="form-group">
      <label for="exampleInputEmail1" >제목</label>
      <input name="title" type="text" class="form-control" value="<%=@one_form.title %>" id="exampleInputEmail1" placeholder="제목을 입력해 주세요">
    </div>
<!--#글작성-->
    <div class="form-group">
      <label for="comment">Comment:</label>
      <textarea name="content" class="form-control" rows="5" id="comment"><%=@one_form.content %></textarea>
    </div>
<!--#글 올리는 버튼-->
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>