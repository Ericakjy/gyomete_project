      <input type="hidden" value="<%=@view_post.id%>" name="id_of_post">
      <textarea name="reply_p" class="form-control" rows="5" id="comment_<%=@view_post.id%>"></textarea>
    </div>
    <button type="submit" class="btn btn-default reply_submit">Submit</button>
</div>


<script>
$('.reply_submit').click (function(){ 
  $.ajax({
    method: "POST",
    url: "/home/post_reply",
    data: { reply_p:"리플입니다", id of post: 1}
  })
})
</script>
